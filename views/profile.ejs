<%- include('partials/header') -%>
<div class="container">
  <div class="main-body">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="main-breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/feed">Home</a></li>
        <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li>
        <li class="breadcrumb-item active" aria-current="page">User Profile</li>
      </ol>
    </nav>
    <!-- /Breadcrumb -->

    <div class="row gutters-sm">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <img
                src="https://bootdey.com/img/Content/avatar/avatar7.png"
                alt="Admin"
                class="rounded-circle"
                width="150"
              />

              <div class="mt-3">
                <h4><%= user.firstName %></h4>

                <% if (user.role === "doctor") { %>

                <p class="text-secondary mb-1"><%= user.specialty %></p>

                <% } else if (user.role === "patient") { %>

                <p class="text-secondary mb-1"><%= user.municipality %></p>

                <% } else { } %>

                <p class="text-muted font-size-sm"><%= user.streetAddress %></p>
                <a href="/logout">
                  <button class="btn btn-primary">Logout</button>
                </a>
                <button class="btn btn-outline-primary">Message</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Full Name</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <%= user.firstName %> <%= user.lastName %>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Email</h6>
              </div>
              <div class="col-sm-9 text-secondary"><%= user.email %></div>
            </div>
            <hr />
            <div class="row">
              <% if (user.role === "doctor") { %>

              <div class="col-sm-3">
                <h6 class="mb-0">Specialty</h6>
              </div>

              <div class="col-sm-9 text-secondary"><%= user.specialty %></div>

              <% } else { %>

              <div class="col-sm-3">
                <h6 class="mb-0">Municipality</h6>
              </div>

              <div class="col-sm-9 text-secondary">
                <%= user.municipality %>
              </div>

              <% } %>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Phone Number</h6>
              </div>
              <div class="col-sm-9 text-secondary"><%= user.phoneNumber %></div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Address</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <%= user.streetAddress %>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-12">
                <a class="btn btn-info" target="__blank" href="#">Edit</a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="card">

        <% if (user.role === "doctor") { %>

        <div class="mt-3">
          <h4>List of Patients</h4>
        </div>

        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">First</th>
              <th scope="col">Last</th>
              <th scope="col">Dx.</th>
              <th scope="col">Email</th>
              <th scope="col">Contact Number</th>
              <th scope="col">Message</th>
            </tr>
          </thead>

          <% } else { %>

            <div class="mt-3">
              <h4>Appointments</h4>
            </div>
    
            <table class="table">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Phyisician</th>
                  <th scope="col">Specialty</th>
                  <th scope="col">Date</th>
                  <th scope="col">Email</th>
                  <th scope="col">Contact Number</th>
                </tr>
              </thead>

            <% } %>

          <tbody>
            <tr>
              <th scope="row">1</th>
              <td>Dr. <%= user.lastName %></td>
              <td><%= user.specialty %></td>
              <td>24/06/2021</td>
              <td><a href="#"><%= user.email %></a></td>
              <td><%= user.phoneNumber %></td>
              <td><button class="btn btn-outline-primary">Contact</button></td>
            </tr>
            <tr>
              <th scope="row">2</th>
              <td>Jacob</td>
              <td>Thornton</td>
              <td>Hepathic Cyrrosis</td>
              <td><a href="#">email@email.com</a></td>
              <td>04125963254</td>
              <td>
                <button class="btn btn-outline-primary">Contact</button>
              </td>
            </tr>
            <tr>
              <th scope="row">3</th>
              <td>Larry</td>
              <td>the Bird</td>
              <td>COVID-19</td>
              <td><a href="#">email@email.com</a></td>
              <td>04145877412</td>
              <td><button class="btn btn-outline-primary">Contact</button></td>
            </tr>
            <tr>
              <th scope="row">3</th>
              <td>Magic</td>
              <td>Johnson</td>
              <td>HIV</td>
              <td><a href="#">email@email.com</a></td>
              <td>04165874123</td>
              <td><button class="btn btn-outline-primary">Contact</button></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="row justify-content-center mt-5">
        <a class="btn btn-primary" href="/feed">Return to Feed</a>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
